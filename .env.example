# Oddshawk configuration
# Copy to .env and fill in your values
# Or use: ./setup.sh to pull from Bitwarden

# The Odds API key — get one at https://the-odds-api.com
ODDS_API_KEY=your_key_here

# Betfair Exchange API (cert-based bot login)
BETFAIR_USERNAME=
BETFAIR_PASSWORD=
BETFAIR_APP_KEY=
BETFAIR_ENABLED=true

# Signal detection thresholds
VALUE_THRESHOLD=0.001
BET_THRESHOLD=0.001
MIN_BETFAIR_MATCHED=100
BETFAIR_COMMISSION=0.05

# Flat stake for simulated bets ($)
SIM_STAKE=100

# Credit budget (free tier = 500/month)
MONTHLY_CREDIT_BUDGET=12000

# Days of equal rotation before adaptive weighting kicks in
EXPLORATION_DAYS=7

# Polling interval in minutes
POLL_INTERVAL_MINUTES=5

# Daily digest time (AEST)
DIGEST_TIME=08:00

# Telegram notifications (optional)
# 1. Message @BotFather on Telegram, /newbot, follow prompts → get token
# 2. Message your new bot, then visit:
#    https://api.telegram.org/bot<TOKEN>/getUpdates
#    to find your chat_id in the response JSON
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Email digest (optional)
EMAIL_ENABLED=false
EMAIL_TO=
EMAIL_FROM=
EMAIL_SMTP=
EMAIL_PORT=587
EMAIL_PASSWORD=

# Database and log paths
DB_PATH=oddshawk.db
LOG_PATH=oddshawk.log
