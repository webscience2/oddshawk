# Oddshawk configuration
# Copy to .env and fill in your values

# The Odds API key â€” get one at https://the-odds-api.com
ODDS_API_KEY=your_key_here

# Signal detection: minimum edge to flag as a value signal (5%)
VALUE_THRESHOLD=0.05

# Simulated betting: minimum edge to place a sim bet (8%)
BET_THRESHOLD=0.08

# Betfair Exchange commission rate (5%)
BETFAIR_COMMISSION=0.05

# Flat stake for simulated bets ($)
SIM_STAKE=100

# Credit budget (free tier = 500/month)
MONTHLY_CREDIT_BUDGET=500

# Days of equal rotation before adaptive weighting kicks in
EXPLORATION_DAYS=7

# Polling interval in minutes (credit-aware scheduler may override)
POLL_INTERVAL_MINUTES=5

# Daily digest time (AEST)
DIGEST_TIME=08:00

# Email digest (optional)
EMAIL_ENABLED=false
EMAIL_TO=
EMAIL_FROM=
EMAIL_SMTP=
EMAIL_PORT=587
EMAIL_PASSWORD=

# Database and log paths
DB_PATH=oddshawk.db
LOG_PATH=oddshawk.log
